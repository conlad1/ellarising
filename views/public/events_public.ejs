<%- include('../partials/header', { title: 'Events – Ella Rises', currentUser }) %>

<section class="section">
  <div class="section-header">
    <h1 class="section-title">Upcoming Events</h1>
    <p class="section-subtitle">Join us at upcoming workshops, summits, and performances.</p>
  </div>

  <% if (!events || events.length === 0) { %>
    <p>No upcoming events yet. Check back soon!</p>
  <% } else { %>
    <div class="grid grid-2">
      <% events.forEach(event => { %>
        <article class="card">
          <h2><%= event.name %></h2>
          <p class="muted"><%= event.type %> • <%= event.dateFormatted %> • <%= event.location %></p>
          <p><%= event.description %></p>
        </article>
      <% }) %>
    </div>
  <% } %>
</section>

<%- include('../partials/footer') %>
