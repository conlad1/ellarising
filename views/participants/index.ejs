<%- include('../partials/header', { title: 'Participants â€“ Ella Rises Admin', currentUser }) %>

<section class="section">
  <div class="section-header header-with-actions">
    <div>
      <h1 class="section-title">Participants</h1>
      <p class="section-subtitle">
        View and manage girls who have participated in Ella Rises events and programs.
      </p>
    </div>

    <% if (currentUser && currentUser.role === 'manager') { %>
      <a href="/participants/new" class="btn btn-primary">Add Participant</a>
    <% } %>
  </div>

  <form method="GET" class="filters filters-inline">
    <div class="form-group">
      <label for="q">Search</label>
      <input id="q" name="q" type="text" value="<%= q || '' %>" placeholder="Search by name, email, or city">
    </div>
    <button class="btn btn-outline">Filter</button>
  </form>

  <% if (!participants || participants.length === 0) { %>
    <p>No participants found yet.</p>
  <% } else { %>
    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th>City</th>
          <th>Grade</th>
          <th>Email</th>
          <th>Events Attended</th>
          <th class="table-actions">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% participants.forEach(p => { %>
          <tr>
            <td><%= p.name %></td>
            <td><%= p.city || '-' %></td>
            <td><%= p.grade || '-' %></td>
            <td><%= p.email || '-' %></td>
            <td><%= p.events_count || 0 %></td>
            <td class="table-actions">
              <a href="/participants/<%= p.id %>" class="link-small">View</a>
              <% if (currentUser && currentUser.role === 'manager') { %>
                | <a href="/participants/<%= p.id %>/edit" class="link-small">Edit</a>
                |
                <form action="/participants/<%= p.id %>/delete" method="POST" class="inline-form">
                  <button class="link-small link-danger" onclick="return confirm('Delete this participant?');">Delete</button>
                </form>
              <% } %>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } %>
</section>

<%- include('../partials/footer') %>