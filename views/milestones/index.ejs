<%- include('../partials/header', { title: 'Milestones â€“ Admin', currentUser }) %>

<section class="section">
  <div class="section-header header-with-actions">
    <div>
      <h1 class="section-title">Milestones</h1>
      <p class="section-subtitle">
        Key steps that show long-term success for participants.
      </p>
    </div>

    <% if (currentUser && currentUser.role === 'manager') { %>
      <a href="/milestones/new" class="btn btn-primary">Create Milestone</a>
    <% } %>
  </div>

  <form method="GET" class="filters filters-inline">
    <div class="form-group">
      <label for="q">Search</label>
      <input id="q" name="q" type="text" value="<%= q || '' %>" placeholder="Search by title or description">
    </div>
    <button class="btn btn-outline">Filter</button>
  </form>

  <% if (!milestones || milestones.length === 0) { %>
    <p>No milestones defined yet.</p>
  <% } else { %>
    <table class="table">
      <thead>
        <tr>
          <th>Title</th>
          <th>Description</th>
          <th class="table-actions">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% milestones.forEach(m => { %>
          <tr>
            <td><%= m.title %></td>
            <td><%= m.description || '-' %></td>
            <td class="table-actions">
              <% if (currentUser && currentUser.role === 'manager') { %>
                <a href="/milestones/<%= m.id %>/edit" class="link-small">Edit</a>
                |
                <form action="/milestones/<%= m.id %>/delete" method="POST" class="inline-form">
                  <button class="link-small link-danger" onclick="return confirm('Delete this milestone?');">Delete</button>
                </form>
              <% } %>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } %>
</section>

<%- include('../partials/footer') %>