<%- include('../partials/header', { title: 'Milestone Details', currentUser, currentPath: '/milestones' }) %>

<section class="section">
  <a href="/milestones" class="btn btn-text" style="margin-bottom: 1rem; display: inline-block;">‚Üê Back to Milestones</a>
  <div class="section-header header-with-actions">
    <div>
      <h1 class="section-title"><%= milestone.title %></h1>
      <p class="section-subtitle">Milestone definition.</p>
    </div>
    <% if (currentUser && currentUser.role === 'admin') { %>
      <div>
        <a href="/milestones/<%= milestone.id %>/edit" class="btn btn-outline">Edit</a>
        <% if (milestone.participants_count > 0) { %>
          <span class="btn btn-outline muted" style="cursor: not-allowed; opacity: 0.6; margin-left: 0.5rem;" title="Cannot delete milestone assigned to participants (assigned to <%= milestone.participants_count %> participant<%= milestone.participants_count > 1 ? 's' : '' %>)">Delete</span>
        <% } else { %>
          <form action="/milestones/<%= milestone.id %>/delete" method="POST" class="inline-form" style="display: inline-block; margin-left: 0.5rem;">
            <button class="btn btn-outline link-danger" onclick="return confirm('Delete this milestone?');">Delete</button>
          </form>
        <% } %>
      </div>
    <% } %>
  </div>

  <div class="card">
    <h2>Details</h2>
    <p><strong>Title:</strong> <%= milestone.title %></p>
    <p><strong>Description:</strong></p>
    <p><%= milestone.description || 'No description provided.' %></p>
  </div>
</section>

<%- include('../partials/footer') %>

