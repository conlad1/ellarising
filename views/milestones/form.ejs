<%- include('../partials/header', { title: formTitle || 'Milestone', currentUser, currentPath: '/milestones' }) %>

<section class="section">
  <a href="/milestones" class="btn btn-text" style="margin-bottom: 1rem; display: inline-block;">‚Üê Back to Milestones</a>
  <div class="section-header">
    <h1 class="section-title"><%= formTitle || 'Milestone' %></h1>
    <p class="section-subtitle">Define a milestone that can be assigned to participants.</p>
  </div>

  <div class="card card-narrow">
    <form action="<%= formAction %>" method="POST" class="form">
      <% if (typeof csrfToken !== 'undefined') { %>
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
      <% } %>

      <div class="form-group">
        <label for="title">Title</label>
        <input id="title" name="title" type="text" value="<%= milestone?.title || '' %>" required>
      </div>

      <div class="form-group">
        <label for="description">Description</label>
        <textarea id="description" name="description" rows="4"><%= milestone?.description || '' %></textarea>
      </div>

      <div class="form-actions">
        <button class="btn btn-primary">Save</button>
        <a href="/milestones" class="btn btn-text">Cancel</a>
      </div>
    </form>
  </div>
</section>

<%- include('../partials/footer') %>
