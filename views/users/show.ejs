<%- include('../partials/header', { title: 'User Details', currentUser, currentPath: '/users' }) %>

<section class="section">
  <a href="/users" class="btn btn-text" style="margin-bottom: 1rem; display: inline-block;">‚Üê Back to Users</a>
  <div class="section-header header-with-actions">
    <div>
      <h1 class="section-title"><%= user.username %></h1>
      <p class="section-subtitle">User account details.</p>
    </div>
    <% if (currentUser && currentUser.role === 'admin') { %>
      <div>
        <a href="/users/<%= user.id %>/edit" class="btn btn-outline">Edit</a>
        <% if (user.id !== currentUser.id) { %>
          <form action="/users/<%= user.id %>/delete" method="POST" class="inline-form" style="display: inline-block; margin-left: 0.5rem;">
            <button class="btn btn-outline link-danger" onclick="return confirm('Delete this user?');">Delete</button>
          </form>
        <% } %>
      </div>
    <% } %>
  </div>

  <div class="card">
    <h2>Account Information</h2>
    <p><strong>Username:</strong> <%= user.username %></p>
    <p><strong>Email:</strong> <%= user.email || '-' %></p>
    <p><strong>Role:</strong> <span class="tag"><%= user.role %></span></p>
  </div>
</section>

<%- include('../partials/footer') %>

