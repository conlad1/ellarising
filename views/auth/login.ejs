<%- include('../partials/header', { title: 'Login â€“ Ella Rises Portal', currentUser, currentPath: '/login' }) %>

<section class="hero hero-small">
  <div class="hero-inner">
    <h1>Welcome back</h1>
    <p>Log in to manage participants, events, surveys, milestones, and donations.</p>
  </div>
</section>

<section class="section">
  <div class="section-header">
    <h1 class="section-title">Login</h1>
    <p class="section-subtitle">Enter your credentials to access the admin portal.</p>
  </div>

  <div class="card card-narrow">
    <form action="/login" method="POST" class="form">
      <!-- Optional CSRF token -->
      <% if (typeof csrfToken !== 'undefined') { %>
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
      <% } %>

      <div class="form-group">
        <label for="username">Username</label>
        <input id="username" name="username" type="text" required>
      </div>

      <div class="form-group">
        <label for="password">Password</label>
        <input id="password" name="password" type="password" required>
      </div>

      <button class="btn btn-primary btn-full">Log In</button>
    </form>
  </div>
</section>

<%- include('../partials/footer') %>
