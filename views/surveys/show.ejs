<%- include('../partials/header', { title: 'Survey Response', currentUser, currentPath: '/surveys' }) %>

<section class="section">
  <a href="/surveys" class="btn btn-text" style="margin-bottom: 1rem; display: inline-block;">‚Üê Back to Surveys</a>
  <div class="section-header header-with-actions">
    <div>
      <h1 class="section-title">Survey: <%= event ? event.name : 'Unknown Event' %></h1>
      <p class="section-subtitle">
        Submitted by <%= participant ? (participant.first_name + ' ' + participant.last_name) : 'Unknown participant' %>
      </p>
    </div>
    <% if (currentUser && currentUser.role === 'admin') { %>
      <div>
        <a href="/surveys/<%= survey.id %>/edit" class="btn btn-outline">Edit</a>
        <form action="/surveys/<%= survey.id %>/delete" method="POST" class="inline-form" style="display: inline-block; margin-left: 0.5rem;">
          <button class="btn btn-outline link-danger" onclick="return confirm('Delete this survey?');">Delete</button>
        </form>
      </div>
    <% } %>
  </div>

  <div class="card">
    <p><strong>Satisfaction:</strong> <%= survey.satisfaction %> / 5</p>
    <p><strong>Usefulness:</strong> <%= survey.usefulness %> / 5</p>
    <p><strong>Recommend:</strong> <%= survey.recommend %> / 5</p>
    <p><strong>Comments:</strong></p>
    <p><%= survey.comment || 'No comments provided.' %></p>
  </div>
</section>

<%- include('../partials/footer') %>