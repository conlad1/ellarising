<%- include('../partials/header', { title: 'Event Details', currentUser }) %>

<section class="section">
  <div class="section-header header-with-actions">
    <div>
      <h1 class="section-title"><%= event.name %></h1>
      <p class="section-subtitle"><%= event.type %> • <%= event.dateFormatted %> • <%= event.location %></p>
    </div>
    <% if (currentUser && currentUser.role === 'manager') { %>
      <a href="/events/<%= event.id %>/edit" class="btn btn-outline">Edit</a>
    <% } %>
  </div>

  <div class="card">
    <h2>Description</h2>
    <p><%= event.description || 'No description provided.' %></p>
  </div>
</section>

<%- include('../partials/footer') %>
