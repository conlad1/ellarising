<%- include('../partials/header', { title: 'Events Admin', currentUser }) %>

<section class="section">
  <div class="section-header header-with-actions">
    <div>
      <h1 class="section-title">Events</h1>
      <p class="section-subtitle">Workshops, summits, and other Ella Rises events.</p>
    </div>

    <% if (currentUser && currentUser.role === 'manager') { %>
      <a href="/events/new" class="btn btn-primary">Create Event</a>
    <% } %>
  </div>

  <form method="GET" class="filters filters-inline">
    <div class="form-group">
      <label for="q">Search</label>
      <input id="q" name="q" type="text" value="<%= q || '' %>" placeholder="Search by name, type, or location">
    </div>
    <button class="btn btn-outline">Filter</button>
  </form>

  <% if (!events || events.length === 0) { %>
    <p>No events created yet.</p>
  <% } else { %>
    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Type</th>
          <th>Date</th>
          <th>Location</th>
          <th>Capacity</th>
          <th class="table-actions">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% events.forEach(e => { %>
          <tr>
            <td><%= e.name %></td>
            <td><%= e.type %></td>
            <td><%= e.dateFormatted %></td>
            <td><%= e.location %></td>
            <td><%= e.capacity || '-' %></td>
            <td class="table-actions">
              <a href="/events/<%= e.id %>" class="link-small">View</a>
              <% if (currentUser && currentUser.role === 'manager') { %>
                | <a href="/events/<%= e.id %>/edit" class="link-small">Edit</a>
                |
                <form action="/events/<%= e.id %>/delete" method="POST" class="inline-form">
                  <button class="link-small link-danger" onclick="return confirm('Delete this event?');">Delete</button>
                </form>
              <% } %>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } %>
</section>

<%- include('../partials/footer') %>