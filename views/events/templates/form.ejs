<%- include('../../partials/header', { title: formTitle || 'Event Template Form', currentUser, currentPath: '/events/templates' }) %>

<section class="section">
  <a href="/events/templates" class="btn btn-text" style="margin-bottom: 1rem; display: inline-block;">‚Üê Back to Event Templates</a>
  <div class="section-header">
    <h1 class="section-title"><%= formTitle || 'Event Template' %></h1>
    <p class="section-subtitle">Enter event template information below.</p>
  </div>

  <div class="card card-narrow">
    <form action="<%= formAction %>" method="POST" class="form">
      <% if (typeof csrfToken !== 'undefined') { %>
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
      <% } %>

      <div class="form-group">
        <label for="name">Event Name</label>
        <input id="name" name="name" type="text" value="<%= template?.name || '' %>" required>
      </div>

      <div class="form-group">
        <label for="type">Event Type</label>
        <input id="type" name="type" type="text" value="<%= template?.type || '' %>" placeholder="e.g., Workshop, Summit, Conference">
      </div>

      <div class="form-group">
        <label for="description">Description</label>
        <textarea id="description" name="description" rows="4"><%= template?.description || '' %></textarea>
      </div>

      <div class="form-group">
        <label for="default_capacity">Default Capacity</label>
        <input id="default_capacity" name="default_capacity" type="number" min="0" value="<%= template?.default_capacity || '' %>" placeholder="Leave blank if no default">
      </div>

      <div class="form-actions">
        <button class="btn btn-primary">Save</button>
        <a href="/events/templates" class="btn btn-text">Cancel</a>
      </div>
    </form>
  </div>
</section>

<%- include('../../partials/footer') %>

